{
  "name": "react-ecommerce-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "client": "cd ../client && npm start",
    "server": "cd ../server && cross-env-shell \"if [ \\\"$OS\\\" = \\\"Windows_NT\\\" ]; then myvenv/Scripts/activate; else source myvenv/bin/activate; fi && python api.py\"",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "start": "vite dev",
    "build": "vite build",
    "preview": "vite preview"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "concurrently": "^9.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.1",
    "react-icons": "^4.12.0",
    "react-router-dom": "^6.6.0",
    "react-scripts": "^3.0.1",
    "react-slick": "^0.29.0",
    "slick-carousel": "^1.8.1",
    "styled-components": "^5.3.6",
    "web-vitals": "^3.1.0",
    "zustand": "^5.0.1"
  },
  "devDependencies": {
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@vitejs/plugin-react": "^3.0.0",
    "autoprefixer": "^10.4.20",
    "cross-env": "^7.0.3",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.14",
    "vite": "^4.0.0"
  }
}
